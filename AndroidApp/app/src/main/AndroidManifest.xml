        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">


        <activity android:name=".Screens.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Screens.InfoActivity" />
        <activity android:name=".Screens.RegistrationActivity"/>
        <activity android:name=".Screens.BookPlaceActivity"/>
        <activity android:name=".Screens.LoginActivity"/>
        <activity android:name=".Screens.HoursActivity"/>

